<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="10dp"
    android:background="#cfe0f1f9"
    tools:context=".SendEtherActivity"
    android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textSize="26dp"
            android:layout_marginTop="100dp"
            android:layout_marginBottom="40dp"
            android:textFontWeight="3"
            android:textColor="#161616"
            android:text="Send Your Ethereum"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textFontWeight="2"
            android:textSize="18dp"
            android:textColor="#212121"
            android:text="To Address :"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/to_id"
                android:layout_weight="2"
                android:paddingLeft="10dp"
                android:hint="0x..."
                android:background="@drawable/background_edit_text_send"
                android:layout_width="match_parent"
                android:layout_height="40dp" />


            <Button
                android:id="@+id/qr_scan"
                android:text="Qr scan"
                android:layout_weight="9"
                android:textAllCaps="false"
                android:textColor="#1BEB70"
                android:background="@drawable/background_button_qr"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="6dp"
                android:layout_marginEnd="3dp"
                android:layout_width="match_parent"
                android:layout_height="30dp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <TextView
                android:layout_weight="2"
                android:textFontWeight="2"
                android:textSize="16dp"
                android:textColor="#212121"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Amount to Send :"/>

            <EditText
                android:id="@+id/amount_to_send"
                android:layout_weight="1"
                android:paddingLeft="10dp"
                android:background="@drawable/background_edit_text_send"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="enter amount"
                android:layout_marginRight="8dp"/>

        </LinearLayout>

        <Button
            android:id="@+id/send_ether_button"
            android:text="Send"
            android:background="@drawable/background_send_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_gravity="center_horizontal"
            />

</LinearLayout>